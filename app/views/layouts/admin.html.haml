!!!
%html
  %head
    %meta(charset='utf-8')
    %meta(name='viewport' content='width=device-width, initial-scale=1.0')
    %meta(name='description' content='')
    %meta(name='author' content='')

    %title="Dashboard - AMS #{@title}"
    %link{:href => "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css", :rel => "stylesheet"}
    %link{:href => "//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.min.css", :rel => "stylesheet"}
    = stylesheet_link_tag 'application', :media => 'all' 
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body

    #wrapper
      / Sidebar
      %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/admin"} AMS Administration
        / Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.side-nav
            / Fix this to properly switch
            %li.active{:id => "assignment_tab"}
              %a{:href => "/admin"}
                %i.fa.fa-edit
                Assignments
            }
            %li{:id => "grading_tab"}
              %a{:href => "/admin/grades/4"}
                %i.fa.fa-bar-chart-o
                Grading
          %ul.nav.navbar-nav.navbar-right.navbar-user
            %li.dropdown.user-dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %i.fa.fa-user
                Dr. Eyhab Al-Masri
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#"}
                    %i.fa.fa-power-off
                    Log Out
      = yield

  :javascript
    $(function () {
        $('#postdatepicker').datetimepicker();
        $('#duedatepicker').datetimepicker();
        $('#datetimepicker1').datetimepicker();
    });
    $(function() {
        $("table").tablesorter({debug: true});
    });