-# This file is app/view/admin/index.html.haml
#page-wrapper
  .row
    .col-lg-12
      %h1
        Assignments
        %small Overview
      %ol.breadcrumb
        %li.active
          %i.fa.fa-edit
          Assignments
  / /.row
  .row
    .col-lg-4
      .panel.panel-success
        .panel-heading
          .row
            .col-xs-6
              %i.fa.fa-check.fa-5x
            .col-xs-6.text-right
              %p.announcement-heading
                = @review_submissions
              %p.announcement-text Submissions
        - if @latest.id
          %a{:href => "/admin/grades/#{@latest.id}"}
            .panel-footer.announcement-bottom
              .row
                .col-xs-6 
                  Review Submissions
                .col-xs-6.text-right
                  %i.fa.fa-arrow-circle-right
        - else 
          %a{:href => "#"}
            .panel-footer.announcement-bottom
              .row
                .col-xs-6
                  Review Submissions
                .col-xs-6.text-right
                  %i.fa.fa-arrow-circle-right
    .col-lg-4
      .panel.panel-warning
        .panel-heading
          .row
            .col-xs-6
              %i.fa.fa-exclamation-triangle.fa-5x
            .col-xs-6.text-right
              %p.announcement-heading 
                = @view_assignment
              %p.announcement-text Not Submitted
        - if @latest.id
          %a{:href => "/admin/assignment/#{@latest.id}"}
            .panel-footer.announcement-bottom
              .row
                .col-xs-6
                  View Assignment Posting
                .col-xs-6.text-right
                  %i.fa.fa-arrow-circle-right
        - else 
          %a{:href => "#"}
            .panel-footer.announcement-bottom
              .row
                .col-xs-6
                  View Assignment Posting
                .col-xs-6.text-right
                  %i.fa.fa-arrow-circle-right
    .col-lg-4
      .panel.panel-danger
        .panel-heading
          .row
            .col-xs-6
              %i.fa.fa-tasks.fa-5x
            .col-xs-6.text-right
              %p.announcement-heading 
                = @resolve_issues
              %p.announcement-text Submission Errors
        - if @latest.id
          %a{:href => "/admin/grades/#{@latest.id}/cheating"}
            .panel-footer.announcement-bottom
              .row
                .col-xs-6
                  Resolve Issues
                .col-xs-6.text-right
                  %i.fa.fa-arrow-circle-right
        - else
          %a{:href => "#"}
            .panel-footer.announcement-bottom
              .row
                .col-xs-6
                  Resolve Issues
                .col-xs-6.text-right
                  %i.fa.fa-arrow-circle-right
  / /.row
  .row
    .col-lg-12
      .panel.panel-primary
        .panel-heading
          %h3.panel-title
            %i.fa.fa-edit
            Posted Assignments
        .panel-body
          .table-responsive
            %table.table.table-bordered.table-hover.table-striped.tablesorter
              %thead
                %tr
                  %th Assignment
                  %th Date Posted
                  %th Date Due
                  %th Submissions
                  %th Average Grade                  
              %tbody
                - @assignments.each do |assignment|
                  %tr
                    %td
                      %a{:href => "/admin/assignment/#{assignment.id}"}
                        = assignment.name
                    %td
                      = assignment.posted
                    %td
                      = assignment.due
                    %td
                      = assignment.submission_count
                    %td
                      %a{:href => "/admin/grades/#{assignment.id}"} 80%              
          .text-right
            %a{:href => "/admin/new"}
              Add New Assignment
              %i.fa.fa-arrow-circle-right
  / /.row
/ /#page-wrapper