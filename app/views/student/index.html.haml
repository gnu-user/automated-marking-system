!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %meta{:content => "", :name => "description"}
          %meta{:content => "", :name => "author"}
            %title Dashboard - AMS Student

  %body
    #wrapper
      / Sidebar
      %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/student"} AMS Student
        / Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.side-nav
            %li.active
              %a{:href => "/student"}
                %i.fa.fa-edit
                Assignments
            %li
              %a{:href => "/student/grades"}
                %i.fa.fa-bar-chart-o
                Grades
          %ul.nav.navbar-nav.navbar-right.navbar-user
            %li.dropdown.alerts-dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %i.fa.fa-bell
                Alerts
                %span.badge 2
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#"}
                    Default
                    %span.label.label-default Default
                %li
                  %a{:href => "#"}
                    Primary
                    %span.label.label-primary Primary
                %li
                  %a{:href => "#"}
                    Success
                    %span.label.label-success Success
                %li
                  %a{:href => "#"}
                    Info
                    %span.label.label-info Info
                %li
                  %a{:href => "#"}
                    Warning
                    %span.label.label-warning Warning
                %li
                  %a{:href => "#"}
                    Danger
                    %span.label.label-danger Danger
                %li.divider
                %li
                  %a{:href => "#"} View All
            %li.dropdown.user-dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %i.fa.fa-user
                Richard Burt
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#"}
                    %i.fa.fa-user
                    Profile
                %li
                  %a{:href => "#"}
                    %i.fa.fa-gear
                    Settings
                %li.divider
                %li
                  %a{:href => "#"}
                    %i.fa.fa-power-off
                    Log Out
        / /.navbar-collapse
      #page-wrapper
        .row
          .col-lg-12
            %h1
              Assignments
              %small Overview
            %ol.breadcrumb
              %li.active
                %i.fa.fa-edit
                Assignments
        / /.row
        .row
          .col-lg-4
            .panel.panel-success
              .panel-heading
                .row
                  .col-xs-6
                    %i.fa.fa-check.fa-5x
                  .col-xs-6.text-right
                    %p.announcement-heading 2
                    %p.announcement-text Assignments Graded
              %a{:href => "#"}
                .panel-footer.announcement-bottom
                  .row
                    .col-xs-6
                      Review Grades
                    .col-xs-6.text-right
                      %i.fa.fa-arrow-circle-right
          .col-lg-4
            .panel.panel-warning
              .panel-heading
                .row
                  .col-xs-6
                    %i.fa.fa-exclamation-triangle.fa-5x
                  .col-xs-6.text-right
                    %p.announcement-heading 1
                    %p.announcement-text Assignment Not Submitted!
              %a{:href => "#"}
                .panel-footer.announcement-bottom
                  .row
                    .col-xs-6
                      View Assignments
                    .col-xs-6.text-right
                      %i.fa.fa-arrow-circle-right
          .col-lg-4
            .panel.panel-danger
              .panel-heading
                .row
                  .col-xs-6
                    %i.fa.fa-tasks.fa-5x
                  .col-xs-6.text-right
                    %p.announcement-heading 1
                    %p.announcement-text Submission Errors
              %a{:href => "#"}
                .panel-footer.announcement-bottom
                  .row
                    .col-xs-6
                      Review Issues
                    .col-xs-6.text-right
                      %i.fa.fa-arrow-circle-right
        / /.row
        .row
          .col-lg-12
            .panel.panel-primary
              .panel-heading
                %h3.panel-title
                  %i.fa.fa-edit
                  Posted Assignments
              .panel-body
                .table-responsive
                  %table.table.table-bordered.table-hover.table-striped.tablesorter
                    %thead
                      %tr
                        %th Assignment
                        %th Date Due
                        %th Date Submitted
                        %th Grade
                    %tbody
                      %tr.success
                        %td
                          %a{:href => "#"} Assignment 1
                        %td 10/20/2013 11:59 PM
                        %td 10/15/2013 3:29 PM
                        %td 84%
                      %tr.success
                        %td
                          %a{:href => "#"} Assignment 2
                        %td 10/29/2013 11:59 PM
                        %td 10/29/2013 11:57 PM
                        %td 71%
                      %tr.danger
                        %td
                          %a{:href => "#"} Assignment 3
                        %td 11/15/2013 11:59 PM
                        %td
                          %span.label.label-danger
                            %span.fa.fa-warning
                            NOT SUBMITTED
                        %td 0%
                      %tr.warning
                        %td
                          %a{:href => "#"} Assignment 4
                        %td 11/28/2013 11:59 PM
                        %td
                          %span.label.label-warning
                            %span.fa.fa-warning
                            NOT SUBMITTED
                        %td
                .text-right
                  %a{:href => "#"}
                    Review Assignments
                    %i.fa.fa-arrow-circle-right
        / /.row
      / /#page-wrapper
    / /#wrapper